{
  "name": "vuetres-template",
  "private": true,
  "version": "0.0.1",
  "description": "Short description",
  "type": "module",
  "engines": {
    "node": ">=20.19.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "vite --mode development",
    "dev-test": "vite --mode test",
    "dev-prod": "vite --mode production",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test-setup": "npx playwright install",
    "test:end": "npx playwright test && npx playwright show-report",
    "lint": "eslint . --ext .js,.ts,.vue --ignore-pattern '**/*.scss' --ignore-pattern '**/*.sass' --ignore-pattern '**/*.css'",
    "lint:fix": "eslint --fix . --ext .js,.ts,.vue --ignore-pattern '**/*.scss' --ignore-pattern '**/*.sass' --ignore-pattern '**/*.css'",
    "type-check": "vue-tsc --noEmit",
    "commitlint": "commitlint --edit",
    "prepare": "husky",
    "pre-commit": "npx lint-staged",
    "pre-push": "npm run test && npm run build"
  },
  "dependencies": {
    "@pinia/nuxt": "^0.5.1",
    "axios": "^1.7.7",
    "js-cookie": "^3.0.5",
    "pinia": "^2.1.7",
    "pinia-plugin-persistedstate": "^3.2.1",
    "vue": "^3.4.29",
    "vue-i18n": "^9.13.1",
    "vue-router": "^4.3.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@intlify/eslint-plugin-vue-i18n": "^2.0.0",
    "@playwright/test": "^1.44.1",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^20.14.5",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.19",
    "commitlint": "^19.3.0",
    "cssnano": "^7.0.4",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.26.0",
    "husky": "^9.0.11",
    "jsdom": "^24.1.0",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "sass": "^1.77.6",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.2.2",
    "vite": "^5.3.1",
    "vitest": "^1.6.0",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^2.0.21"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{scss,sass,css}": [
      "prettier --write"
    ]
  }
}
